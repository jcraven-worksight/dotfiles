{
  // Controls the font family.
    "editor.fontFamily": "Consolas, 'Courier New', monospace",    // vscode settings
    "editor.lineNumbers": "relative",
    "editor.fontSize": 13.5,
    "editor.tabSize": 2,
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
    "window.zoomLevel": 0.5,
    "workbench.colorCustomizations": {
        "statusBar.background": "#005f5f",
        "statusBar.noFolderBackground": "#005f5f",
        "statusBar.debuggingBackground": "#005f5f"
    },
    "workbench.editor.enablePreview": false,
    "window.menuBarVisibility": "default",
    "telemetry.enableTelemetry": false, // dont send usage 

    "todohighlight.isCaseSensitive": false,
    // "todohighlight.isEnable": false,

    // vsvim
    "vim.leader": ",",
    "vim.insertModeKeyBindings": [
        {
            "before": ["j","k"],
            "after": ["<Esc>"]
        }
    ],
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": [";"],
            "after": [":"]
        },
        { 
        // close and save
            "before": ["z", "z"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                },
                {
                    "command": "workbench.action.closeActiveEditor",
                    "args": []
                }
            ]
        },
        {
            "before": [":"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.showCommands",
                    "args": []
                }
            ]
        }
    ],
    // disables vsvim handling these keys
    "vim.handleKeys": {
        "<C-w>": false,
        "<C-b>": false,
        "<C-k>": false,
        "<C-f>": false,
        "<C-n>": false,
        "<C-t>": false,
        "<C-y>": false
    },
    "vim.useCtrlKeys": true,
    "vim.substituteGlobalFlag": true,
    "vim.useSystemClipboard": true,
    "vim.easymotion": true,
    "vim.easymotionMarkerFontSize": "15",
    "vim.statusBarColorControl": true,
    "vim.statusBarColors" : {
        "normal": "#005f5f",
        "insert": "#5f0000",
        "visual": "#5f00af",
        "visualline": "#005f87",
        "visualblock": "#86592d",
        "replace": "#000000"
    },
    // "editor.multiCursorModifier": "ctrlCmd",
    "extensions.ignoreRecommendations": false,
    "workbench.colorTheme": "Dark Chrome DevTools",
    "explorer.confirmDelete": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "workbench.statusBar.feedback.visible": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.showUpdateMessage": false,
    "gitlens.keymap": "chorded",
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true
    }

    // eslint settings
}
