{
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.fontLigatures": true,
    "editor.fontFamily": "Consolas,'Courier New', monospace",
    "editor.lineNumbers": "relative",
    "editor.fontSize": 13.5,
    "editor.tabSize": 2,
    // "editorIndentGuide.activeBackground": "#005f5f", //not working in april release?
    // "editor.lineHeight": 24,
    "explorer.confirmDelete": false,
    "explorer.decorations.badges": false,
    "extensions.ignoreRecommendations": false,
    "javascript.implicitProjectConfig.checkJs": true, // ts type check - not working?
    "telemetry.enableTelemetry": false, // dont send usage 
    "terminal.integrated.fontSize": 12.5,
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
    "todohighlight.isCaseSensitive": false,
    // "todohighlight.isEnable": false,
    "window.menuBarVisibility": "default",
    "window.zoomLevel": 0.5,
    "workbench.colorTheme": "Ayu Dark",
    "workbench.iconTheme": "vs-nomo-dark",
    "workbench.editor.enablePreview": false,
    "workbench.colorCustomizations": {
        "[Ayu Dark]": {},
        // "statusBar.background": "#005f5f",
        // "statusBar.noFolderBackground": "#005f5f",
        // "statusBar.debuggingBackground": "#005f5f"
    },
    "workbench.statusBar.feedback.visible": false,

    "vim.leader": ",",
    "vim.insertModeKeyBindings": [
        {
            "before": ["j","k"],
            "after": ["<Esc>"]
        }
    ],
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": [";"],
            "after": [":"]
        },
        { 
        // close and save
            "before": ["z", "z"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                },
                {
                    "command": "workbench.action.closeActiveEditor",
                    "args": []
                }
            ]
        },
        {
            "before": [":"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.showCommands",
                    "args": []
                }
            ]
        }
    ],
    // disables vsvim handling these keys
    "vim.handleKeys": {
        "<C-w>": false,
        "<C-b>": false,
        "<C-k>": false,
        "<C-f>": false,
        "<C-n>": false,
        "<C-t>": false,
        "<C-y>": false
    },
    "vim.useCtrlKeys": true,
    "vim.substituteGlobalFlag": true,
    "vim.useSystemClipboard": true,
    "vim.easymotion": true,
    "vim.easymotionMarkerFontSize": "15",
    "vim.statusBarColorControl": true,
    "vim.statusBarColors" : {
        // "normal": "#005f5f",
        // "insert": "#5f0000",
        // "visual": "#5f00af",
        // "visualline": "#005f87",
        // "visualblock": "#86592d",
        // "replace": "#000000"
    },

    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.keymap": "chorded",
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true
    },
    "gitlens.gitExplorer.files.layout": "auto",
    "materialTheme.cache.workbench.settings": {
        "accent": "Orange",
        "accentPrevious": "Blue"
    }
}
